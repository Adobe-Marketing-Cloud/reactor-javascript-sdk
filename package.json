{
  "name": "@adobe/reactor-sdk-node",
  "version": "0.0.1",
  "description": "JavaScript SDK for the Reactor API",
  "author": {
    "name": "Adobe Systems",
    "url": "https://www.adobe.com/experience-platform/launch.html",
    "email": "reactor@adobe.com"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Adobe-Marketing-Cloud/reactor-sdk-javascript/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https@github.com:Adobe-Marketing-Cloud/reactor-sdk-javascript.git"
  },
  "keywords": [
    "Adobe",
    "Launch",
    "tag manager",
    "SDK"
  ],
  "main": "./src/reactor.js",
  "scripts": {
    "postinstall": "node ./check-version",

    "test": "npm run unit-tests && npm run integration-tests",

    "unit-tests": "npm run unit:lint-build-run",
    "unit-watch": "./node_modules/nodemon/bin/nodemon.js -w test/unit/ -w src/ --exec npm run unit:lint-build-run",
    "unit:lint": "eslint --fix --parser-options=ecmaVersion:8 '{lib,test/unit}/**/*.js'",
    "unit:build": "node_modules/.bin/parcel build --no-minify -d testing -o unit-tests.js test/unit/main.js --target node",
    "unit:run": "node ./check-version && node_modules/.bin/jasmine testing/unit-tests.js",
    "unit:lint-build-run": "clear; npm run unit:lint && npm run unit:build && npm run unit:run",

    "integration-tests": "npm run integration:lint-build-run",
    "integration-watch": "node_modules/.bin/nodemon --watch test/integration/ --watch src/ --exec 'npm run integration:lint-build-run'",
    "integration:lint": "node_modules/.bin/eslint --fix --parser-options=ecmaVersion:8 '{lib,test/integration}/**/*.js'",
    "integration:build:environment": "node test/integration/write-reactor-environment.js",
    "integration:build": "npm run integration:build:environment && ./node_modules/.bin/parcel build --no-minify -d testing -o integration-tests.js test/integration/all-tests-for-browser.js",
    "integration:run": "node ./check-version && open test/integration/integration-tests.html",
    "integration:lint-build-run": "npm run integration:lint && npm run integration:build && npm run integration:run"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 safari versions"
  ],
  "nodemonConfig": {
    "ignore": [
      "test/integration/globals-for-browser.js"
    ]
  },
  "engines": {
    "node": ">=10.15.1"
  },
  "files": [
    "dist",
    "lib"
  ],
  "dependencies": {
    "node-fetch": "2.3.0"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "jasmine": "3.3.1",
    "nock": "10.0.6",
    "nodemon": "1.18.10",
    "parcel-bundler": "1.12.3",
    "prettier": "1.16.4"
  }
}
