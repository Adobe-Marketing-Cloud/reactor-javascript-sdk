{
  "name": "@adobe/reactor-sdk-node",
  "version": "0.0.1",
  "description": "JavaScript SDK for the Reactor API",
  "author": {
    "name": "Adobe Systems",
    "url": "https://www.adobe.com/experience-platform/launch.html",
    "email": "reactor@adobe.com"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Adobe-Marketing-Cloud/reactor-sdk-javascript/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https@github.com:Adobe-Marketing-Cloud/reactor-sdk-javascript.git"
  },
  "keywords": [
    "Adobe",
    "Launch",
    "tag manager",
    "SDK"
  ],
  "main": "./lib/node/index.js",
  "browser": "./lib/browser/index.js",
  "scripts": {
    "postinstall": "node ./check-version",
    "build": "npm run src:build",
    "test": "npm run all-tests",
    "src:lint": "eslint --fix --parser-options=ecmaVersion:8 'src/**/*.js'",
    "src:build:node": "babel src/ --out-dir lib/node/ --source-maps --presets latest-node",
    "src:build:browser": "babel src/ --out-dir lib/browser/ --source-maps --presets @babel/preset-env",
    "src:build:browser.bundle": "npx parcel build -d dist -o reactor.min.js src/index.js --target browser",
    "src:build": "npm-run-all --print-label --parallel 'src:build:*'",
    "unit:lint": "eslint --fix --parser-options=ecmaVersion:8 'test/unit/**/*.js'",
    "unit:build": "babel test/unit --out-dir tmp.tests/unit/ --source-maps --presets latest-node",
    "unit:run": "node ./check-version && jasmine tmp.tests/unit/index.js",
    "integration:lint": "eslint --fix --parser-options=ecmaVersion:8 'test/integration/**/*.js'",
    "integration:build:environment": "node test/integration/write-reactor-environment.js",
    "integration:build": "npm run integration:build:environment && npx parcel build --no-minify --public-url=. -d tmp.tests/integration/ -o index.html test/integration/integration-tests.html",
    "integration:run": "node ./check-version && open tmp.tests/integration/index.html",
    "unit-tests": "npm-run-all unit:lint unit:build unit:run",
    "integration-tests": "npm-run-all integration:lint integration:build integration:run",
    "all-tests": "npm-run-all src:lint src:build --parallel unit-tests integration-tests",
    "src-watch": "nodemon --watch src/ --watch package.json --exec npm-run-all src:lint src:build",
    "unit-watch": "nodemon --watch lib/node --watch test/unit/ --exec npm run unit-tests",
    "integration-watch": "nodemon --watch lib/browser --watch test/integration/ --exec npm run integration-tests",
    "all-watch": "nodemon --watch package.json --watch src/ --watch test/ --exec npm run all-tests"
  },
  "browserslist": [
    "last 2 chrome versions",
    "last 2 firefox versions",
    "last 2 safari versions",
    "last 2 edge versions"
  ],
  "nodemonConfig": {
    "ignore": [
      "test/integration/globals-for-browser.js"
    ]
  },
  "engines": {
    "node": ">=10.15.1"
  },
  "files": [
    "dist",
    "lib"
  ],
  "dependencies": {
    "node-fetch": "2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "babel-preset-latest-node": "3.1.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "jasmine": "3.3.1",
    "nock": "10.0.6",
    "nodemon": "1.18.10",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4"
  }
}
